<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="section-title">
                <h1>Apartment Rentals</h1>
            </div>
        </div>
    </div>
    <ul id="projects-slider">
        <% apartments.forEach(function(appartment) { %>
        <li>
            <article>
                <div class="listing-wrapper">
                    <a href="/apartments/<%= appartment.address %>">
                        <div class="listing-overlay">
                            <h4 class="status">
                            <span>
                                <i class="fa fa-circle-thin" aria-hidden="true"></i>
                                <%= appartment.status %>
                            </span>
                            </h4>
                            <p id="listing-details">
                            <span>
                                <span>
                                    <span id="rent-price">$<%= appartment.price %>/mo</span>
                                    <span><i class="fa fa-bed" aria-hidden="true"></i></span>
                                    <%= appartment.beds %>bds.
                                    <span><i class="fa fa-bath" aria-hidden="true"></i></span>
                                    <%= appartment.baths %>ba.
                                </span>
                            </span>
                            </p>
                            <p id="rent-address">
                                <span><%= appartment.address %></span>
                            </p>
                        </div>
                        <div>
                            <img src="/images/projects/<%= appartment.mainPicture %>.jpg" alt="main-picture"
                                 class="img-responsive">
                        </div>
                    </a>
                </div>
            </article>
        </li>
        <% }); %>
    </ul>
</div>






